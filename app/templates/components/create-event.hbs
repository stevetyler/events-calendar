
<form {{action 'saveEvent' on='submit'}}>

  {{input
    class="title"
    placeholder="Title"
    value=newEvent.title
  }}

  {{input
    placeholder="Subject"
    value=newEvent.subject
  }}

  {{input
    placeholder="Teacher"
    value=newEvent.teacher
  }}

  {{#power-select
    selected=selectedStartDate
    options=weekDates
    onchange=(action 'setDate' 'startDate')
    placeholder='Start Day'
    as |date|}}
      {{moment-format date 'dddd'}}
  {{/power-select}}

  {{#power-select
    selected=selectedEndDate
    options=filteredWeekDates
    onchange=(action 'setDate' 'endDate')
    placeholder='End Day'
    as |date|}}
      {{moment-format date 'dddd'}}
  {{/power-select}}

  <button type="submit" class="save">Save</button>
  <button type="reset" onclick={{action 'clearSelections'}}>Clear</button>
</form>
